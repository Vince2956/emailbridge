{
	"name": "nextcloud/emailbridge",
	"description": "<![CDATA[Capture d'email pour transmission de contenu de haute valeur stockÃ© sur le cloud.]]>",
	"license": "AGPL-3.0-or-later",
	"authors": [
		{
			"name": "Scaviner Vincent",
			"email": "contact@cubeconception.fr",
			"homepage": "http://www.cubeconception.fr"
		}
	],
	"autoload": {
		"psr-4": {
			"OCA\\EmailBridge\\": "lib/"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"@composer bin all install --ansi"
		],
		"post-update-cmd": [
			"@composer bin all install --ansi"
		],
		"lint": "find . -name \\*.php -not -path './vendor/*' -not -path './vendor-bin/*' -not -path './build/*' -print0 | xargs -0 -n1 php -l",
		"cs:check": "php-cs-fixer fix --dry-run --diff",
		"cs:fix": "php-cs-fixer fix",
		"psalm": "psalm --threads=1 --no-cache",
		"test:unit": "phpunit tests -c tests/phpunit.xml --colors=always --fail-on-warning --fail-on-risky",
		"openapi": "generate-spec",
		"rector": "rector && composer cs:fix"
	},
	"require": {
		"php": "^8.1",
		"bamarni/composer-bin-plugin": "^1.8",
		"doctrine/dbal": "^4.2"
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^3.89",
		"nextcloud/ocp": "dev-stable30",
		"phpunit/phpunit": "^10.5",
		"roave/security-advisories": "dev-latest",
		"vimeo/psalm": "^5.26"
	},
	"config": {
		"allow-plugins": {
			"bamarni/composer-bin-plugin": true
		},
		"optimize-autoloader": true,
		"sort-packages": true,
		"platform": {
			"php": "8.1"
		}
	}
}
